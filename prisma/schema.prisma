// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id       Int             @id @default(autoincrement())
  username String
  password String          @map("password_hash")
  strikes  StudentStrike[]

  @@map("students")
}

model Teacher {
  id             Int             @id @default(autoincrement())
  username       String
  password       String          @map("password_hash")
  studentStrikes StudentStrike[]
  strikes        TeacherStrike[]
  classrooms     Classroom[]

  @@map("teachers")
}

model Admin {
  id             Int             @id @default(autoincrement())
  username       String
  password       String          @map("password_hash")
  teacherStrikes TeacherStrike[]

  @@map("admins")
}

model TeacherStrike {
  id       Int       @id @default(autoincrement())
  points   Int
  teachers Teacher[]
  admin    Admin     @relation(fields: [adminId], references: [id])
  adminId  Int

  @@map("teacher_strikes")
}

model StudentStrike {
  id        Int       @id @default(autoincrement())
  points    Int
  students  Student[]
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  teacherId Int

  @@map("student_strikes")
}

model Classroom {
  id       Int       @id @default(autoincrement())
  name     String
  teachers Teacher[]

  @@map("classrooms")
}
