// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int    @id @default(autoincrement())
  identifier String @unique
  password   String
  role       Role?  @relation(fields: [roleId], references: [id])
  roleId     Int?
}

model Student {
  id                Int                @id @default(autoincrement())
  userId            Int?               @unique
  name              String             @default("User")
  nis               String             @default("0XXX")
  points            Int                @default(0)
  strikes           StudentStrike[]
  attendanceReports AttendanceReport[]
  classroom         Classroom?         @relation(fields: [classroomId], references: [id])
  classroomId       Int?
}

model Teacher {
  id                Int                @id @default(autoincrement())
  userId            Int?               @unique
  name              String             @default("User")
  studentStrikes    StudentStrike[]
  attendanceReports AttendanceReport[]
  classroom         Classroom?         @relation(fields: [classroomId], references: [id])
  classroomId       Int?
}

model Classroom {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[]
  teachers Teacher[]
}

model StudentStrike {
  id          Int      @id @default(autoincrement())
  reason      String   @default("No reason")
  description String   @default("No description")
  amount      Int      @default(0)
  active      Boolean  @default(true)
  date        DateTime @default(now())
  teacherId   Int?
  typeId      Int?

  type     StudentStrikeType? @relation(fields: [typeId], references: [id])
  teacher  Teacher?           @relation(fields: [teacherId], references: [id])
  students Student[]
}

model StudentStrikeType {
  id             Int             @id @default(autoincrement())
  name           String
  amount         Int             @default(0)
  hasDescription Boolean         @default(false)
  description    String?         @default("No description")
  studentStrikes StudentStrike[]
}

model AttendanceReport {
  id        Int       @id @default(autoincrement())
  students  Student[]
  date      DateTime  @default(now())
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  teacherId Int
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  User User[]
}

model Complaint {
  id      Int    @id @default(autoincrement())
  message String @default("No message")
}

model FeatureRequest {
  id      Int    @id @default(autoincrement())
  message String @default("No message")
}
